        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:paddingHorizontal="16dp"
        android:text="b"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
